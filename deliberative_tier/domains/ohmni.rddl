class DialogueStateVariable : StateVariable {

    predicate Interact(string intent) {
        duration >= 5.0;
    }
}

class OhmniRobot {

    DialogueStateVariable dialogue;
    PhysicalExerciseStateVariable physical_exercise;

    OhmniRobot() : dialogue(new DialogueStateVariable()), physical_exercise(new PhysicalExerciseStateVariable(this)) {}
}

OhmniRobot robot = new OhmniRobot();